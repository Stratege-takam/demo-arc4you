                    <td data-table-heading="Salary">1180</td>
                    <td>
                        <NVButton XSmall Level="2" Color="primary" Icon="edit" MR="2" />
                        <NVButton XSmall Level="2" Color="error" Icon="x" MR="2" />
                        <NVButton XSmall Level="2" Color="secondary" Icon="eye" MR="2" />
                    </td>
