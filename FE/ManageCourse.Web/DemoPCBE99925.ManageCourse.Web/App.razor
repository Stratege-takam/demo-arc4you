@inject IStringLocalizer<EG.DemoPCBE99925.ManageCourse.Web.Pages.Resources.Global> Localized

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (context.User?.Identity?.IsAuthenticated != true)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <NVStack Fill Vertical Gutter="2" Padding="4">
                            <NVPanel Class="text-center" Color="Primary" Outlined>
                                <h3>@Localized["Unauthorized_Sorry"]</h3>
                            </NVPanel>
                            <NVPanel Class="flex justify-center">
                                <NVImg Src="/assets/img/unauthorized.svg" />
                            </NVPanel>
                            <NVPanel Class="text-center text-bold underline" Color="Primary" Outlined>
                                <h3>@Localized["PopupIsDisabled"]</h3>
                            </NVPanel>
                        </NVStack>                   
                    }
                    
                </NotAuthorized>
                <Authorizing>
                    <div class="cursor-wait">
                        <div class="flex flex-col space-y-4 h-16">
                            <div class="flex justify-center">
                                <div class="avatar text-xl bg-primary-200 px-8">
                                    We are authenticating you!
                                </div>
                            </div>
                        </div>
                    </div>
                    <a href="authentication/login">Log in</a>
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
